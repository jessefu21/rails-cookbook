<div class="form-new mt-4" >


    <h1>Add a recipe to <%= @category.name %></h1>




    <%= simple_form_for [@category, @bookmark] do |f| %>
      <%= f.input :comment %>
      <%= f.association :recipe %>
    <%= f.submit class: 'btn btn-flat' %>
    <% end %>
    <br>
    <%= link_to "<<< Back", category_path(@category) %>






</div>
